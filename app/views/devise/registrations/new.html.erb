<h2>Sign up</h2>

<%= notice %>
<%= alert %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: "Email" %>
    <%= f.input :nickname,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nickname"},
                label: "Nickname" %> 
    <%= f.input :FirstName, 
                required: true,
                autofocus: true,
                input_html: { autocomplete: "FirstName" },
                label: "First Name" %>
    <%= f.input :LastName, 
                required: true,
                autofocus: true,
                input_html: { autocomplete: "LastName" },
                label: "Last Name" %>
    <%= f.input :address, 
                required: true,
                autofocus: true,
                input_html: { autocomplete: "address" },
                label: "Address" %> 
    <%= f.input :HomePhone, 
                required: true,
                autofocus: true,
                input_html: { autocomplete: "HomePhone" },
                label: "Home Phone" %> 
    <%= f.input :CelPhone, 
                required: true,
                autofocus: true,
                input_html: { autocomplete: "CelPhone" },
                label: "Cel Phone" %>                                                                                    
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<br /><br /><br /><br /><br />
